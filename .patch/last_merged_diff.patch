+            echo "‚úÖ Result: $(echo "$latest_run" | jq -r '.conclusion')"
+            echo "üåø Branch: $(echo "$latest_run" | jq -r '.head_branch')"
+            echo "üïí Created: $(echo "$latest_run" | jq -r '.created_at')"
+          done
